  <h1>Message</h1>

  <!--header profile pic-->
  <div id="header-main">

    <!-- Page-specific (main) content here -->
    <main class="container">
      <!--list of messages-->
      <section class="message-container">
        <!--message-->
        <article class="message">
          <header>
            <div class="message-user">
              <label>Username</label>
            </div>
          </header>
          <p>
            Message
          </p>
        </article>
      </section>
      <section>
        <!--textbox area-->
        <form class="textsubmit" action="/messages/:id" method="POST">
          <textarea name="message-box" class="message-box" placeholder="Send a message"></textarea>
          <button type="submit" class="send-message">Tweet</button>
        </form>
      </section>
    </main>
