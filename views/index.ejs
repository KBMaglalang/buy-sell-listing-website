  <script type="text/javascript" src="/scripts/app.js"></script>
</head>

<body>
  <main class="homepage">
    <%- include('partials/_nav') %>
      <!--filter-->
      <div class="filter">
        <p>Price range</p>
        <input placeholder="min" class="filterbox minbox">
        <p>to</p>
        <input placeholder="max" class="filterbox maxbox">
        <button type="button" class="btn btn-primary filter-button">Filter</button>
      </div>
      <!--banner-->
      <img
        src="https://images.unsplash.com/photo-1563990308267-cd6d3cc09318?ixlib=rb-1.2.1&ixid=MnwxMjA3fDB8MHxwaG90by1wYWdlfHx8fGVufDB8fHx8&auto=format&fit=crop&w=1470&q=80"
        id="banner">
      <!--product container-->
      <div class="product-container">
        <% for (let product of products) { %>
        <!--product-feature-->
        <div class="product-feature">
          <img src="<%=product.image_url_one %>" class="product-feature-photo">
          <div class="product-header-description">
            <header class="product-header">
              <a href="/product/<%=product.id%>">
                <h3><%=product.name%></h3>
              </a>

              <h3>$<%=product.price%></h3>
            </header>
            <p class="product-description"><%=product.description%></p>
          </div>
        </div>
        <!-- 2nd product feature
        <div class="product-feature">
          <img src="images/bike-photo1.png" class="product-feature-photo">
          <div class="product-header-description">
            <header class="product-header">
              <h3>Product name</h3>
              <h3>$100</h3>
            </header>
            <p class="product-description">Lorem ipsum dolor sit amet, consectetur adipiscing elit. Proin quam dolor, dictum nec vestibulum dapibus, sodales id nunc. Aenean nec suscipit odio. Curabitur pulvinar mi sit amet sem fermentum tincidunt. Phasellus volutpat tincidunt sapien, ut sodales tellus sagittis ut. </p>
          </div>
        </div> -->
        <% } %>
      </div>
  </main>
